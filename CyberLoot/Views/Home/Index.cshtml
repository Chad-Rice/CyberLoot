@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<div style="background-color: #08618d;">
    <div class="containier text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="mb-5 display-2"><strong>CyberLoot - Online Video Game Store</strong></h1>
                <p>
                    Online Video Game Store for new video games and old games at reasonable prices.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/hero.png" class="img-fluid" alt="hero" />
            </div>
        </div>
    </div>
</div>

<div style="background-color: #2C2C2C; color: white;">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Newest Products</h2>

        <div class="row mb-5 g-3">
            @foreach (var product in Model)
            {
                var genreNames = product.ProductGenres.Select(pg => pg.Genre.GenreName);
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100" style="background-color: #121212;">
                        <img src="@product.ImageUrl" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain" />
                        <hr style="border-color: #ffffff;" />
                        <h5 class="py-2" style="color: white;">@product.Name</h5>
                        <p>
                            @foreach (var genre in genreNames)
                            {
                                <span class="badge bg-secondary">@genre</span>
                            }
                        </p>
                        <h4 class="mb-3" style="color: white;">€@(product.Price)</h4>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                           asp-action="Details" asp-route-id="@product.Id" role="button">Details</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @product.Id)">
                            Add to Cart <i class="bi bi-cart4"></i>
                        </button>
                        <button type="button" class="btn btn-success btn-sm mb-2" onclick="addToWishlist(@product.Id)">
                            Add to Wishlist <i class="bi bi-heart-fill"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
