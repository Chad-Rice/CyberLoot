@model IEnumerable<CyberLoot.Models.Genre>

<h2>Genres</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Genre</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Genre Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.GenreName</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@genre.GenreId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this genre?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
